<header class="header">
  <div class="header__left">
    <h3 class="header__title"><a href="/">Computer Science Book Club</a></h3>
  </div>
  <div class="header__center">
    <a href="/" class="header__logo">Î»</a>
  </div>
  <div class="header__right">
    <div class="header__account">
      <% if (locals.user) { %>
        <% if (locals.user.role.split(",").includes("ADMIN")) { %>
          <a href="/admin">[Dashboard]</a>
        <% } %>
        <a href="/user/<%=user.username%>"><%=user.username%></a>
        <form method="POST" action="/user/logout">
          <button type="submit" placeholder="Logout">Logout</button>
        </form>
      <% } else { %>
        <a href="/user/login">Register</a>
        <a href="/user/login">Log in</a>
      <% } %>
    </div>
  </div>
</header>
